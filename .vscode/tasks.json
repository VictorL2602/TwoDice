{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "process",
            "command": "clang.exe",
            "args": [
                "-std=c23",
                "-Wall",
                "-Wextra",
                "-Iinclude",
                "main.c",
                "-o",
                "main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "process",
            "command": "main.exe",
            "dependsOn": [
                "build"
            ]
        }
    ]
}